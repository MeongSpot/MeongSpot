{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"], 
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,        // 사용되지 않는 로컬 변수 무시
    "noUnusedParameters": false,    // 사용되지 않는 매개변수 무시
    "noFallthroughCasesInSwitch": true,
    "types": ["node"] ,
  },
  "include": ["vite.config.ts"]
}
